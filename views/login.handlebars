<form class="login-form pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group">
            <label for="email-login">Email:</label>
            <input type="text" id="email-login" />
        </div>
        <div class="pure-control-group">
            <label for="password-login">Password:</label>
            <input type="password" id="password-login" />
        </div>
        <div class="pure-controls">
            <button class="pure-button pure-button-primary" type="submit">Login</button>
        </div>
    </fieldset>
</form>

<form class="signup-form pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group">
            <label for="username-signup">Username:</label>
            <input type="text" id="username-signup" />
        </div>
        <div class="pure-control-group">
            <label for="email-signup">Email:</label>
            <input type="text" id="email-signup" />
        </div>
        <div class="pure-control-group">
            <label for="password-signup">Password:</label>
            <input type="password" id="password-signup" />
        </div>
        <div class="pure-controls">
            <button class="pure-button pure-button-primary" type="submit">Signup</button>
        </div>
    </fieldset>
</form>

<script src="/javascript/login.js"></script>