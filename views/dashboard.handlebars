<section>
    <h2>Create New Post</h2>

    <form class="new-post-form pure-form pure-form-stacked">
        {{> form }}
        <button type="submit" class="btn pure-button">Create Post</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol class="style-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link pure-button">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>